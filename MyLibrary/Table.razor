<div class="table-responsive">
  <table class="table custom">
    <thead>
      <tr>
        <th scope="col">
          <CheckBox></CheckBox>
        </th>
        @foreach (var column in Columns)
        {
          <th scope="col"><span class="fw-normal label-light">@column</span></th>
        }
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      @for (int i = 0; i < Data.GetLength(0); i++)
      {
        <tr>
          <th scope="col">
            <CheckBox></CheckBox>
          </th>
          @for (int j = 0; j < Data.GetLength(1); j++)
          {
            <td>@Data[i, j]</td>
          }
          <th scope="col">
            <Button>
              <span>
                <i class="fa-solid fa-trash-can"></i>
              </span>
            </Button>
          </th>
        </tr>
      }
    </tbody>
  </table>
</div>


@code {
  [Parameter] public string[]? Columns { get; set; } = [];
  [Parameter] public string[,]? Data { get; set; } = { };
  [Parameter] public bool[]? checkOptions { get; set; } = [];
}