<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["css/app.css"]" />
    <link rel="stylesheet" href="@Assets["BlazorApp.styles.css"]" />
    <link rel="stylesheet" href="@Assets["_content/MyLibrary/css/app.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <link rel="stylesheet" href="_content/Syncfusion.Blazor/styles/bootstrap5.css" />
    <script src="_content/Syncfusion.Blazor/scripts/syncfusion-blazor.min.js" type="text/javascript"></script>
    <HeadOutlet />
    <link rel="stylesheet" href="./lib/fortawesome/fontawesome-free/css/all.min.css" />
    <script src="./lib/fortawesome/fontawesome-free/js/all.min.js"></script>
    <script src="./lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body class="container-fluid mt-1">
    <MainPanel>
        <Header>
            <div class="d-flex justify-content-between align-items-center gap-3">
                <div class="d-flex align-items-center gap-3">
                    <img src="./imgs/Logo.png" />
                    <DropDown></DropDown>
                    
                </div>
                <div class="d-flex align-items-center gap-3">
                    <IconButton IconFontAwsome="magnifying-glass"></IconButton>
                    <IconButton IconFontAwsome="gears"></IconButton>
                    <IconButton IconFontAwsome="inbox" BadgeValue="1"></IconButton>
                    <Avatar srcImage="./imgs/Avatar.png" User="Erik Frings" Perfil="Perfil 1 - Entidades 0"></Avatar>
                </div>
            </div>
        </Header>

        <div class="border-divider">
            <div class="row d-flex justify-content-between align-items-center px-4 pt-3">
                <div class="col-12 col-md-6 d-flex gap-3 align-items-end">
                    <span class="icon primary-light pb-2">
                        <i class="fa-solid fa-arrow-left"></i>
                    </span>
                    <div class="d-flex flex-column">
                        <div class="sub-title">
                            AVISOS
                        </div>
                        <div class="d-flex gap-3">
                            <h1>NOVO AVISO</h1>
                        </div>
                    </div>
                    <span class="icon primary-light pb-2">
                        <i class="fa-solid fa-pencil"></i>
                    </span>
                    <span class="sub-title primary-light pb-2">
                        EM PREENCHIMENTO
                    </span>
                </div>
                <div class="col-12 col-md-6 d-flex gap-3 mb-1 justify-content-end">
                    <Button>
                        <i class="fa-solid fa-floppy-disk"></i>
                        Guardar Alterações
                    </Button>

                    <Button>
                        Validar
                    </Button>

                    <Button>
                        <i class="fa-solid fa-check"></i>
                        Pulicar
                    </Button>

                </div>
            </div>
        </div>
        <div class="row px-4 g-3 py-4">
            <div class="col-12 col-md-4">
                <Panel>
                    @for (int i = 1; i <= 12; i++)
                    {
                        @if (i < 10)
                        {
                            <div class="lista d-flex justify-content-between">
                                <span>
                                    Opção @i
                                </span>
                                <span class="text-success">
                                    <i class="fa-regular fa-circle-check"></i>
                                </span>
                            </div>
                        }
                        @if (i == 10)
                        {
                            <div class="lista selected d-flex justify-content-between">
                                <span>
                                    Opção @i
                                </span>
                                <span>
                                    <i class="fa-solid fa-circle-notch fa-spin"></i>
                                </span>
                            </div>
                        }

                        if (i > 10)
                        {
                            <div class="lista d-flex justify-content-between">
                                <span>
                                    Opção @i
                                </span>
                                <span class="light-color">
                                    <i class="fa-regular fa-circle"></i>
                                </span>
                            </div>
                        }

                    }
                </Panel>
            </div>
            <div class="col-12 col-md-8">
                <div class="row g-3">
                    <div class="col-12 d-flex justify-content-between align-items-start">
                        <h3>Opção 10</h3>
                        <div class="d-flex align-items-center gap-2 ">
                            <span class="btn-circle">
                                <i class="fa-solid fa-chevron-left"></i>
                            </span>
                            <label class="label-light pe-2">ANTERIOR</label>
                            <label class="label-light">SEGUINTE</label>
                            <span class="btn-circle">
                                <i class="fa-solid fa-chevron-right"></i>
                            </span>

                        </div>
                    </div>
                    <div class="col-12">
                        <span class="primary-light">
                            * Campos de preenchimento obrigatório
                        </span>
                    </div>
                    <div class="col-12">
                        <Panel>
                            <div class="col-12 col-sm-4">
                                <h4>Tipo de taxa</h4>
                                <Select Label="Adicionar Tipo de taxa"></Select>
                            </div>
                        </Panel>
                    </div>
                    <div class="col-12">
                        <Panel>
                            <div class="col-12 col-sm-5">
                                <h4> Contar *</h4>
                                <div class="d-flex gap-3">
                                    <Radio Name="op" Label="Sim"></Radio>
                                    <Radio Name="op" Label="Não"></Radio>
                                </div>

                            </div>
                        </Panel>
                    </div>
                    <div class="col-12">
                        <Panel>
                            <div class="row">
                                <div class="col-12">
                                    <h4> Taxa *</h4>
                                </div>
                                <div class="col-12 col-md-6">
                                    <Switch Label="Adicionar taxa por localização"></Switch>
                                </div>
                                <div class="col-12 col-md-6 d-flex justify-content-end">
                                    <Button>
                                        <i class="fa-solid fa-plus"></i>
                                        <span>Adicionar Taxa</span>
                                    </Button>
                                </div>
                            </div>
                            <Table Columns="@ColumnsTable" Data="@Data"></Table>
                        </Panel>
                    </div>
                </div>
            </div>
        </div>
    </MainPanel>

    <script src="_framework/blazor.web.js"></script>
</body>

</html>


@code{
    public string[] ColumnsTable { get; set; } = ["NUTS II","NUTS III","Concelho", "Taxa(%)"];
     [Parameter] public string[,]? Data { get; set; } = {{"Norte","Ave", "Fafe","25%"},{"Norte","Área Metropolitana do Porto", "Matosinhos","75%"}};

}
